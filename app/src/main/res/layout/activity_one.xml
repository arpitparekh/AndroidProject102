<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".passString_passObject_revision.OneActivity">

    <EditText
        android:id="@+id/edtSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="Enter Something"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSendString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="34dp"
        android:text="Send String"
        app:layout_constraintEnd_toEndOf="@+id/edtSend"
        app:layout_constraintTop_toBottomOf="@+id/edtSend" />

    <Button
        android:id="@+id/btnSendObjectFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="2dp"
        android:text="Send Object"
        app:layout_constraintEnd_toEndOf="@+id/btnSendString"
        app:layout_constraintTop_toBottomOf="@+id/btnSendString" />
</androidx.constraintlayout.widget.ConstraintLayout>